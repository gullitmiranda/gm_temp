<%= semantic_form_for [:admin, @page], :html => { :multipart => true, class: 'form-horizontal' } do |f| %>
  <%= errors_for @page %>

  <div class="control-group">
    <%= f.label :published, :class => 'control-label' %>
    <div class="controls">
      <%= f.check_box :published, :class => 'checkbox' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :in_menu, :class => 'control-label' %>
    <div class="controls">
      <%= f.check_box :in_menu, :class => 'checkbox' %>
    </div>
  </div>

  <hr />

  <%= f.globalize_inputs :translations do |lf| %>
    <div class="control-group">
      <%= lf.label :name, t(".name"), :class => 'control-label' %>
      <div class="controls">
        <%= lf.text_field :name, :class => 'text_field' %>
      </div>
    </div>
    <div class="control-group">
      <%= lf.label :content, t(".content"), :class => 'control-label' %>
      <div class="controls">
        <%= lf.cktext_area :content, :class => 'text_area' %>
      </div>
    </div>
    <%= lf.input :locale, :as => :hidden %>
  <% end %>

  <hr />

  <div class="form-actions">
    <%= f.submit :class => 'btn btn-primary' %>
    <%= link_to t(".cancel"), admin_pages_path, :class => 'btn btn-link cancel' %>
  </div>
<% end %>
