<div class="panel">
  <h3><%= t "permalink" %>: <%= link_to post_path(s), post_path(s), target: "_blank" %></h3>
  <div class="panel_contents" id="details">
    <div class="attributes_table">
      <table class="table table-bordered">
        <tbody>
          <tr><th><%= t '.title'    %></th><td><%= s.name       %></td></tr>
          <tr><th><%= t '.date'     %></th><td><%= l s.datetime %></td></tr>
          <tr><th><%= t '.tag_list' %></th><td><%= s.tag_list   %></td></tr>
          <tr>
            <th><%= t '.published'  %></th>
            <td><%= best_in_place s, :published, type: :checkbox, path: [:admin, s]  %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
  <h3><%= t ".summary" %></h3>
  <div class="panel_contents" id="description">
    <div class="attributes_table well">
      <%= raw s.summary %>
    </div>
  </div>
  <h3><%= t ".description" %></h3>
  <div class="panel_contents" id="description">
    <div class="attributes_table well">
      <%= raw s.body %>
    </div>
  </div>
</div>
