<h1>
  <%= yield(:article_title) %>
</h1>
<% if yield(:article_summary).present? %>
  <div class="summary">
    <%= yield(:article_summary) %>
  </div>
<% end %>
<% if @article.uploads.count > 0 %>
  <div class="news-image">
    <%= image_tag(@article.uploads.first.upload.url(:medium), width: "301", :alt => @article.uploads.first.alt_text || @article.uploads.first.upload_file_name ) %>
  </div>
<% end %>
<div class="article_content">
  <%= yield(:article_content) %>
</div>
