<% f.inputs "Index of Articles" do %>
  <% f.input :index_of_articles_tagged_with, :hint => "Auf der Uebersichtsseite werden alle Artikel des gleichen Typs mit diesen Tags ausgegeben. Sind keine Tags angegeben, werden alle Artikel des gleichen Typs ausgegeben."%>
  <% f.input :not_tagged_with, :hint => "Artikel mit diesen Tags NICHT anzeigen!", :label => "Liste von ausschlie&szlig;enden Tags" %>
  <% sort_options = Rdcms::Article::SortOptions %>
  <% f.input :sort_order, as: :select, collection: sort_options, include_blank: false %>
  <% f.input :sorter_limit %>
  <% f.input :reverse_sort, hint: "Soll absteigend sortiert werden? Standard: Aufsteigend" %>
<% end %>